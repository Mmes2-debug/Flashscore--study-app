{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/models": ["./src/models/index.ts"],
      "@/models/*": ["./src/models/*"],
      "@/services": ["./src/services/index.ts"],
      "@/services/*": ["./src/services/*"],
      "@/routes": ["./src/routes/index.ts"],
      "@/routes/*": ["./src/routes/*"],
      "@/controllers": ["./src/controllers/index.ts"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/utils": ["./src/utils/index.ts"],
      "@/utils/*": ["./src/utils/*"],
      "@/types": ["./src/types/index.ts"],
      "@/types/*": ["./src/types/*"],
      "@/config": ["./src/config/index.ts"],
      "@/config/*": ["./src/config/*"],
      "@/middleware": ["./src/middleware/index.ts"],
      "@/middleware/*": ["./src/middleware/*"],
      "@shared/*": ["../../packages/shared/src/*"],
      "@shared/types": ["../../packages/shared/src/libs/types/index.ts"],
      "@shared/utils": ["../../packages/shared/src/libs/utils/index.ts"],
      "@shared/models": ["../../packages/shared/src/libs/models/index.ts"],
      "@shared/services": ["../../packages/shared/src/libs/services/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__/**", "src/_disabled/**"]
}